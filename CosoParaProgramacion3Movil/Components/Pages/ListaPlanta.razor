@page "/planta"
@using CosoParaProgramacion3Movil.Models;
@using System.Collections.Generic;
@using System.Linq;
@using System.Threading.Tasks;
@using CosoParaProgramacion3Movil.Services;

@inject NavigationManager navigationManager

<!-- si esta pagina no carga, puede ser porque el url esta mal porque te olvidaste el prefijo PELOTUDO JJAJAJAJAAJAA QUE MOGOBLICO-->

<h3>Plantas</h3>

<button class="btn btn-primary" @onclick="Volver">Volver</button>

<button class="btn btn-primary" @onclick="CargarPlantas">Cargar Plantas</button>

<button class="btn btn-primary" @onclick="CrearPlanta">Crear Plantas</button>

@if (baseDePlantas != null)
{   
@if (!baseDePlantas.Any())
{
    <p><em>No hay productos disponibles.</em></p>
}
else
{
    <table width="100%">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre Cientifico</th>
                <th>Nombre Vulgar</th>
            </tr>
        </thead>
        @foreach (var planta in baseDePlantas)
        {
            <tr>
                    <td width="10%">@planta.Imagen</td>
                    <td width="35%">@planta.NombreCientifico</td>
                    <td width="20%">@planta.NombreVulgar</td>
                    <td width="35%">
                        <button class="btn btn-primary" @onclick="() => EditarPlanta(planta)">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16"><path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" /></svg>

                        </button>
                        <button class="btn btn-danger" @onclick="() => BorrarPlanta(planta)">

                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" /><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" /></svg>

                        </button>
                    </td>
            </tr>
        }
    </table>
}
}

@if (mensajeError != null)
{
    <p style="color:red">@mensajeError</p>
}

@code {

    private List<Plantas>? baseDePlantas;
    private string? mensajeError;

    private async Task CargarPlantas()
    {
        try
        {
            mensajeError = null;
            baseDePlantas = await ApiService.GetPlantas();
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
            Console.WriteLine(ex); // También lo ves en la consola
        }
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/");
    }

    private void EditarPlanta(Plantas planta)
    {
        //ACA FALTA LA COMPROBACION DE USUARIO VALIDO
        navigationManager.NavigateTo($"/planta/editar/{planta.Id}");
    }

    private void BorrarPlanta(Plantas planta)
    {
        //ACA FALTA LA COMPROBACION DE USUARIO VALIDO
        //ACA FALTA EL CODIGO PARA BORRAR UNA PLANTA
        navigationManager.NavigateTo($"/planta/eliminar/{planta.Id}");
    }

    private void CrearPlanta()
    {
        //ACA FALTA LA COMPROBACION DE USUARIO VALIDO
        // Navegar a la página de creación del producto
        navigationManager.NavigateTo("/planta/crear");
    }

    [Inject]
    private PlantaService ApiService { get; set; } = default!;
}
